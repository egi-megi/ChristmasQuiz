<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance"  parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/green_avocado</item>
    </style>

    <!-- Legend's style-->
    <style name="Legend">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/green_avocado</item>
        <item name="android:textColor">@color/legendColor</item>
        <item name="android:textSize">@dimen/answers_text_size</item>
    </style>

    <!-- Question's style-->
    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_quastions</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_quastions</item>
        <item name="android:layout_marginRight">@dimen/right_margin_quastions</item>
        <item name="android:layout_marginTop">@dimen/top_margin_quastions</item>
        <item name="android:fontFamily">@font/green_avocado</item>
        <item name="android:textColor">@color/quastionsColor</item>
        <item name="android:textSize">@dimen/quastion_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- CheckBox's and RadioButton's style-->
    <style name="CheckBoxRadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_between_draw_answers</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_between_answers</item>
        <item name="android:fontFamily">@font/green_avocado</item>
        <item name="android:textColor">@color/quastionsColor</item>
        <item name="android:textSize">@dimen/answers_text_size</item>
    </style>

    <!-- EditText's style-->
    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_answers</item>
        <item name="android:maxLength">10</item>
        <item name="android:fontFamily">@font/green_avocado</item>
        <item name="android:textColor">@color/quastionsColor</item>
        <item name="android:textSize">@dimen/quastion_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for button "show the results" and for button "try again"-->
    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_button</item>
        <item name="android:paddingRight">@dimen/margin_button</item>>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">@font/bunga_melati_putih</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
